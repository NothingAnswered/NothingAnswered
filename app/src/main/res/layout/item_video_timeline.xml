<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#181818"
    xmlns:tools="http://schemas.android.com/tools">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.makeramen.roundedimageview.RoundedImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/rivVideoProfilePic"
            android:src="@drawable/profile"
            app:riv_corner_radius="50dip"
            app:riv_tile_mode="repeat"
            />

        <TextView
            android:id="@+id/tvVideoQuestion"
            android:textSize="18sp"
            android:textStyle="bold|italic"
            android:fontFamily="sans-serif-condensed"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            tools:text="My question goes here"
            android:paddingLeft="10dp"
            android:layout_gravity="center_vertical"
            android:textColor="#FFFFFF"
            android:background="#181818"
            />

    </LinearLayout>


    <FrameLayout
        android:id="@+id/frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <com.volokh.danylo.video_player_manager.ui.VideoPlayerView
            android:id="@+id/vpVideoTexture"
            android:layout_height="300dp"
            android:layout_width="match_parent"
            />

        <ImageView
            android:id="@+id/ivVideoThumbnail"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:scaleType="centerCrop"
            android:src="@drawable/stoprecord"

            />
    </FrameLayout>
</LinearLayout>
